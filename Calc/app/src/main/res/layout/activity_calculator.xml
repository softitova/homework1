<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:tools="http://s...content-available-to-author-only...d.com/tools"
        xmlns:tools2="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.macbook.androidhw1.MainActivity">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:id="@+id/result"
    android:layout_above="@+id/d1"
    android:layout_marginBottom="40dp"
    android:layout_alignRight="@+id/add"
    android:layout_alignEnd="@+id/add"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_gravity="right"
    android:textSize="18sp"
    android:layout_centerHorizontal="true"/>

    <TextView
    android:layout_width="80dp"
    android:layout_height="50dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="      Calculator"
    android:id="@+id/textView"
    android:layout_alignParentTop="true"
    android:layout_alignRight="@+id/d3"
    android:layout_alignEnd="@+id/d3"
    android:layout_toRightOf="@+id/d1"
    android:layout_toEndOf="@+id/d1"
    android:textSize="24dp"
    android:textStyle="normal" />

<RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New RadioButton"
    android:id="@+id/radioButton"
    android:layout_below="@+id/result"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="500dp"
    android:layout_marginStart="500dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:id="@+id/clear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/d0"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/clear"
        android:layout_toEndOf="@+id/clear" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="="
    android:id="@+id/eqv"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/d0"
        android:layout_toEndOf="@+id/d0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/div"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/sub"
        android:layout_above="@+id/mul"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/mul"
        android:layout_above="@+id/eqv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/d9"
        android:layout_alignBaseline="@+id/mul"
        android:layout_alignBottom="@+id/mul"
        android:layout_toRightOf="@+id/d0"
        android:layout_toEndOf="@+id/d0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/d8"
        android:layout_above="@+id/clear"
        android:layout_toLeftOf="@+id/d9"
        android:layout_toStartOf="@+id/d9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/d7"
        android:layout_above="@+id/clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/d4"
        android:layout_above="@+id/d8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5"
    android:id="@+id/d5"
        android:layout_above="@+id/d9"
        android:layout_toRightOf="@+id/d7"
        android:layout_toEndOf="@+id/d7" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="6"
    android:id="@+id/d6"
        android:layout_alignBaseline="@+id/d5"
        android:layout_alignBottom="@+id/d5"
        android:layout_toRightOf="@+id/d5"
        android:layout_toEndOf="@+id/d5" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="+"
    android:id="@+id/add"
        android:layout_above="@+id/sub"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/d3"
        android:layout_alignBaseline="@+id/add"
        android:layout_alignBottom="@+id/add"
        android:layout_toRightOf="@+id/d5"
        android:layout_toEndOf="@+id/d5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/d2"
        android:layout_alignBaseline="@+id/d3"
        android:layout_alignBottom="@+id/d3"
        android:layout_toLeftOf="@+id/d3"
        android:layout_toStartOf="@+id/d3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/d1"
        android:layout_alignBaseline="@+id/d2"
        android:layout_alignBottom="@+id/d2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
